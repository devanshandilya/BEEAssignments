<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo</title>
</head>
<body>
  <h1>Todos</h1>

  <form action="/addTask" method="POST">
    <input type="text" name="newTask" placeholder="Enter a new task" required>
    <button type="submit">Add Task</button>
  </form>

  <ul>
    <% tasks.forEach(function(task, index) { %>
      <li><%= task %></li>
    <% }) %>
  </ul>
</body>
</html>
